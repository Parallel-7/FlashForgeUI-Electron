{
  "name": "FlashForgeUI",
  "productName": "FlashForgeUI",
  "version": "1.0.1",
  "description": "Monitoring and Control software for FlashForge printers",
  "main": "lib/index.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run build:main:watch\" \"npm run build:renderer:watch\"",
    "build": "npm run build:main && npm run build:renderer && npm run build:webui",
    "build:main": "tsc",
    "build:main:watch": "tsc --watch",
    "build:renderer": "webpack --config webpack.config.js",
    "build:renderer:watch": "webpack --config webpack.config.js --watch",
    "build:webui": "tsc --project src/webui/static/tsconfig.json && npm run build:webui:copy",
    "build:webui:copy": "node scripts/copy-webui-assets.js",
    "build:linux": "npm run build && electron-builder --linux --publish never --config electron-builder-config.js",
    "build:win": "npm run build && electron-builder --win --publish never --config electron-builder-config.js && rimraf dist/win-unpacked",
    "build:mac": "npm run build && electron-builder --mac --publish never --config electron-builder-config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "linecount": "powershell -ExecutionPolicy Bypass -File count_lines.ps1",
    "clean": "rimraf lib dist \"NVIDIA Corporation\"",
    "typecheck": "npx tsc --noEmit"
  },
  "keywords": [],
  "author": {
    "name": "GhostTypes",
    "email": "106415648+GhostTypes@users.noreply.github.com"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0",
    "express": "^5.1.0",
    "ff-api": "file:../ff-5mp-api-ts",
    "p-limit": "^6.2.0",
    "slicer-meta": "file:../slicer-meta",
    "ws": "^8.18.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.1",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.30.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.9",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron": "35.1.4",
    "electron-builder": "^24.12.0",
    "eslint": "^9.16.0",
    "html-webpack-plugin": "^5.6.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  }
}
